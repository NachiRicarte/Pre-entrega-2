function mostrarBebidas() {
  const contenedorBebidas = document.getElementById('listaBebidas');
  contenedorBebidas.innerHTML = '';  

  bebidas.map(bebida => {
    contenedorBebidas.innerHTML += `
      <h3>${bebida.titulo}</h3>
      <p>Precio: $${bebida.precio}</p>
      <p>${bebida.descripcion}</p>
    `;
  });
}
mostrarBebidas()